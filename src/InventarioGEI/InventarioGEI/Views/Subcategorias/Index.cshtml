@model IEnumerable<InventarioGEI.Models.Subcategoria>

@{
    ViewData["Title"] = "Index";
}

<div class="row container-title">
    <div class="col-3 d-flex align-items-center">
        <h3 class="m-0 me-3">Subcategorías</h3>
        <a asp-controller="Home" asp-action="Manual" type="button"><span class="badge rounded-pill text-bg-secondary bg-secondary">info</span></a>
    </div>

    <a asp-action="Create" type="button" class="col-1 btn btn-primary button-create"><i class="fa-solid fa-plus"></i> Crear subcategoría</a>
</div>
<div>
    <blockquote class="blockquote lead card">
        <p>Las subcategorías son el tercer nivel de la clasificación de las fuentes de las emisiones de GEI</p>
    </blockquote>
</div>
<div class="card mb-3 container-main">
    <table class="table table-hover table-main">
        <thead>
            <tr class="tr-head">
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.categoria)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.nombreSubcategoria)
                </th>
                
                <th class="th-head"></th>
                <th class="th-head"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr class="tr-body">
                    <td>
                        @Html.DisplayFor(modelItem => item.categoria.nombreCategoria)
                        <br>
                        <small class="text-muted">Creador por: @Html.DisplayFor(modelItem => item.usuario.email)</small>
                    </td>
                <td class="td-body-main">
                    @Html.DisplayFor(modelItem => item.nombreSubcategoria)
                </td>
                
               
                    <td>
                        <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.idSubcategoria">
                            <i class="fa-solid fa-pen"></i> Editar
                        </a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idSubcategoria">
                            <i class="fa-solid fa-trash"></i> Eliminar
                        </a>
                    </td>
            </tr>
    }
        </tbody>
    </table>
</div>