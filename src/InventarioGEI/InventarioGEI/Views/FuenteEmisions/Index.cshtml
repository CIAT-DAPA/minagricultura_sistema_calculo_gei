@model IEnumerable<InventarioGEI.Models.FuenteEmision>

@{
    ViewData["Title"] = "Index";
}

<div class="row container-title">
    <h3 class="col-3">Fuentes de emisión</h3>

    <a asp-action="Create" type="button" class="col-1 btn btn-primary button-create"><i class="fa-solid fa-plus"></i> Crear Fuente de emisión</a>
</div>
<div>
    <blockquote class="blockquote lead card">
        <p>Las fuentes de emisión son las actividades o procesos que emiten contaminación al aire.</p>
    </blockquote>
</div>
<div class="card mb-3 container-main">
    <table class="table table-hover table-main">
        <thead>
            <tr class="tr-head">
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.nombreFuenteEmision)
                </th>
              
                <th class="th-head"></th>
                <th class="th-head"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="tr-body">
                    <td class="td-body-main">
                        @Html.DisplayFor(modelItem => item.nombreFuenteEmision)
                        <br>
                        <small class="text-muted">Creador por: @Html.DisplayFor(modelItem => item.usuario.email)</small>
                    </td>
                  
                    <td>
                        <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.idFuenteEmision">
                            <i class="fa-solid fa-pen"></i> Editar
                        </a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idFuenteEmision">
                            <i class="fa-solid fa-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
