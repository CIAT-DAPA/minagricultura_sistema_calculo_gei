@model InventarioGEI.Models.FactorEmision

@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-3 container-main">
    <div class="card-header">
        <h3 style="margin-top: 10px;">Eliminar Factor de Emisión</h3>
        <hr />
    </div>
    <dl>
        <div class="row">
            <div class="col-12 col-lg-9">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.configuracion)
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.configuracion
                </dd>
            </div>
            <div class="col-12 col-lg-9">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.gei)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.gei.nombreGei)
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-6 col-xl-3">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.factorEmision)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.factorEmision)
                </dd>
            </div>
            <div class="col-12 col-lg-6 col-xl-3">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.PCG)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PCG)
                </dd>
            </div>
            <div class="col-12 col-lg-6 col-xl-3">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.incertidumbreMas)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.incertidumbreMas)%
                </dd>
            </div>
            <div class="col-12 col-lg-6 col-xl-3">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.incertidumbreMenos)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.incertidumbreMenos)%
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.usuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.usuario.email)
                </dd>
            </div>
        </div>
        <dd>
            <form asp-action="Delete">
                <div class="form-group group-buttons">
                    <input type="hidden" asp-for="idFE" />
                    <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
            </form>
        </dd>
    </dl>
</div>
