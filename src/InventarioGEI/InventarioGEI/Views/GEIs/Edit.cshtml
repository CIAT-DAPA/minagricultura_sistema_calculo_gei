@model InventarioGEI.Models.GEI

@{
    ViewData["Title"] = "Edit";
}

<div class="card mb-3 container-main">
    <div class="card-header">
        <h3 style="margin-top: 10px;">Editar GEI</h3>
        <hr />
    </div>
    <form asp-action="Edit" class="form-main">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idGei" />
            <div class="form-group">
            <label asp-for="nombreGei" class="control-label col-form-label"></label>
            <input asp-for="nombreGei" placeholder="Ingrese el nombre del GEI" class="form-control input-text" />
                <span asp-validation-for="nombreGei" class="text-danger"></span>
            </div>
        <div class="form-group group-buttons">
            <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
        </form>
    </div>

