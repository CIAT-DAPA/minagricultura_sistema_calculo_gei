@model IEnumerable<InventarioGEI.Models.Sede>

@{
    ViewData["Title"] = "Sedes";
}

<div class="container-fluid">
    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
        <div class="d-flex align-items-center">
            <label for="municipios">Municipios: </label>
            <select class="form-select form-select-sm" id="municipios" aria-label="">
                <option selected>Todos</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>

        <a asp-action="Create" class="btn btn-primary float-right">Agregar sede</a>
    </div>
    <p>

    </p>
    <table class="table-primary ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombreSede)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.enabled)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreSede)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.enabled)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.idSede">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.idSede">Detalles</a> |
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.idSede">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

