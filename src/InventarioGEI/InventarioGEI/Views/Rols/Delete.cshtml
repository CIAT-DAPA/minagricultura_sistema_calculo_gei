@model InventarioGEI.Models.Rol

@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-3" style="min-height: 100%; box-shadow: 0px 6px 18px 0px rgb(0 0 0 / 6%);">
    <div class="card-header" style="background-color: transparent; border: none;">
        <h3 style="margin-top: 10px;">Eliminar Rol</h3>
        <hr />
    </div>
    <dl class="row" style="padding: 20px 40px; height: 58vh; display: flex; flex-direction: column; justify-content: space-between;">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombreRol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreRol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.permisoRol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.permisoRol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.permisoSede)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.permisoSede)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.permisoConfiguracion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.permisoConfiguracion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.permisoRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.permisoRegistro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.permisoVisualizacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.permisoVisualizacion)
        </dd>
        <dd>
            <form asp-action="Delete" >
                <div class="form-group" style="text-align-last: end; margin-top: 50px;">
                    <input type="hidden" asp-for="idRol" />
                    <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
            </form>
        </dd>
    </dl>
</div>

