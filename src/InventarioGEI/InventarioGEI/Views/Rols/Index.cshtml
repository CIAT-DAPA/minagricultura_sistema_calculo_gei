@model IEnumerable<InventarioGEI.Models.Rol>

@{
    ViewData["Title"] = "Index";
}

<div class="row" style="justify-content: space-between; margin-bottom: 24px; align-items: baseline;">
    <h3 class="col-3">Roles</h3>

    <a asp-action="Create" type="button" class="col-1 btn btn-primary" style="font-weight: 500; color: white; text-decoration: none;">Crear Rol</a>
 
</div>

<div class="card mb-3" style="min-height: 100%; box-shadow: 0px 6px 18px 0px rgb(0 0 0 / 6%);">
    <table class="table table-hover" style="margin-top: 10px;">
        <thead>
            <tr style="text-align: center; color: #334D6E; font-weight: 100 !important;">
                <th style="font-weight: 500; border-color: #EBEFF2;">
                    @Html.DisplayNameFor(model => model.nombreRol)
                </th>
                <th style="font-weight: 500; border-color: #EBEFF2;">
                    @Html.DisplayNameFor(model => model.permisoRol)
                </th>
                <th style="font-weight: 500; border-color: #EBEFF2;">
                    @Html.DisplayNameFor(model => model.permisoSede)
                </th>
                <th style="font-weight: 500; border-color: #EBEFF2;">
                    @Html.DisplayNameFor(model => model.permisoConfiguracion)
                </th>
                <th style="font-weight: 500; border-color: #EBEFF2;">
                    @Html.DisplayNameFor(model => model.permisoRegistro)
                </th>
                <th style="font-weight: 500; border-color: #EBEFF2;">
                    @Html.DisplayNameFor(model => model.permisoVisualizacion)
                </th>
                <th style="font-weight: 500; border-color: #EBEFF2;"></th>
                <th style="font-weight: 500; border-color: #EBEFF2;"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr style="text-align: center; vertical-align: middle;">
                <td style="font-weight: 600;">
                    @Html.DisplayFor(modelItem => item.nombreRol)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.permisoRol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.permisoSede)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.permisoConfiguracion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.permisoRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.permisoVisualizacion)
                </td>
                <td>
                    <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.idRol" style="text-decoration: none; font-weight: 600;">
                            Editar
                    </a>
                </td>
                <td>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idRol" style="text-decoration: none; font-weight: 600; color: white;">
                        Eliminar
                    </a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>