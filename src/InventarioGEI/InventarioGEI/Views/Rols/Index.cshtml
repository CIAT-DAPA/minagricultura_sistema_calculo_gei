@model IEnumerable<InventarioGEI.Models.Rol>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombreRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.permisoRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.permisoSede)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.permisoConfiguracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.permisoRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.permisoVisualizacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreRol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.permisoRol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.permisoSede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.permisoConfiguracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.permisoRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.permisoVisualizacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idRol">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idRol">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idRol">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
