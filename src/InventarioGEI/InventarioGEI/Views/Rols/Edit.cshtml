@model InventarioGEI.Models.Rol

@{
    ViewData["Title"] = "Edit";
}

 <div class="card mb-3" style="min-height: 100%; box-shadow: 0px 6px 18px 0px rgb(0 0 0 / 6%);">
        <div class="card-header" style="background-color: transparent; border: none;">
        <h3 style="margin-top: 10px;">Editar Rol</h3>
             <hr />
        </div>
    
        <form asp-action="Edit" style="padding: 20px 40px; height: 58vh; display: flex; flex-direction: column; justify-content: space-around;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idRol" />

            <div class="form-group">
                <label asp-for="nombreRol" class="control-label col-form-label" style="color: #109CF1;"></label>
                <input asp-for="nombreRol" placeholder="Ingrese el nombre del Rol" class="form-control" style="border: none; border-bottom: solid 1px black; border-radius: 0px; width: 400px; height:40px;font-weight: 600; padding: 0px;" />
                <span asp-validation-for="nombreRol" class="text-danger"></span>
            </div>


            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="permisoRol" /> @Html.DisplayNameFor(model => model.permisoRol)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="permisoSede" /> @Html.DisplayNameFor(model => model.permisoSede)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="permisoConfiguracion" /> @Html.DisplayNameFor(model => model.permisoConfiguracion)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="permisoRegistro" /> @Html.DisplayNameFor(model => model.permisoRegistro)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="permisoVisualizacion" /> @Html.DisplayNameFor(model => model.permisoVisualizacion)
                </label>
            </div>

            <div class="form-group" style="text-align-last: end; margin-top: 50px;">
                <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    
    </div>


