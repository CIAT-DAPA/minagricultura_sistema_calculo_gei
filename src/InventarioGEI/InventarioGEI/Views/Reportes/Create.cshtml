@model InventarioGEI.Models.Reporte

@{
    ViewData["Title"] = "Create";
}

<div class="card mb-3 container-main">
    <div class="card-header">
        <h5 style="margin-top: 10px;">Reporte nuevo</h5>
        <hr />
    </div>

    <form asp-action="Create" class="form-main">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-12 col-lg-5">
            <label asp-for="nombreReporte" class="control-label col-form-label"></label>
            <input asp-for="nombreReporte" placeholder="Ingrese el nombre del reporte" class="form-control input-text" />
            <span asp-validation-for="nombreReporte" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-lg-5">
            <label asp-for="link" class="control-label col-form-label"></label>
            <input asp-for="link" placeholder="Ingrese el link del reporte" class="form-control input-text" />
            <span asp-validation-for="link" class="text-danger"></span>
        </div>
        <div class="form-group group-buttons">
            <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </form>
</div>

