@model IEnumerable<InventarioGEI.Models.Reporte>

@{
    ViewData["Title"] = "Index";
}
<div class="row container-title">
    <div class="col-3 d-flex align-items-center">
        <h3 class="m-0 me-3">Reportes</h3>
        <a asp-controller="Home" asp-action="Manual" type="button"><span class="badge rounded-pill text-bg-secondary bg-secondary">info</span></a>
    </div>
    @if (ViewBag.Edit != null) {
        <a asp-action="Create" type="button" class="btn btn-primary button-create"><i class="fa-solid fa-plus"></i> Reporte nuevo</a>
    }
    
</div>
<div>
    <blockquote class="blockquote lead card">
        <p>Los reportes son los resultados de las emisiones generadas por el Ministerio de Agricultura de Colombia</p>
    </blockquote>
</div>

<div class="card mb-3 container-main">
    <table class="table table-hover table-main">
        <thead>
            <tr class="tr-head">
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.nombreReporte)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.link)
                </th>
                @if (ViewBag.Edit != null)
                {
                    <th class="th-head"></th>
                    <th class="th-head"></th>
                }
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="tr-body">
                    <td class="td-body-main">
                        @Html.DisplayFor(modelItem => item.nombreReporte)
                    </td>
                    <td>
                        <a type="button" class="btn btn-primary" asp-action="Visualizar" asp-route-id="@item.idReporte">
                            <i class="fa-solid fa-eye"></i> Ver Reporte
                        </a>
                    </td>
                    @if (ViewBag.Edit != null)
                    {
                        <td>
                            <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.idReporte">
                                <i class="fa-solid fa-pen"></i> Editar
                            </a>
                        </td>
                        <td>
                            <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idReporte">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
