@model InventarioGEI.Models.Combustible

@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-3 container-main">
    <div class="card-header">
        <h5 style="margin-top: 10px;">Eliminar combustible</h5>
        <hr />
    </div>
    <dl>
        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.actividad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.actividad.nombreTipoActividad)
            </dd>
        </div>
        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.nombreCombustible)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nombreCombustible)
            </dd>
        </div>

        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.tipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.tipo.tipo)
            </dd>
        </div>
        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.unidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.unidad.unidad)
            </dd>
        </div>





        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.usuario.email)
            </dd>
        </div>

        <dd>
            <form asp-action="Delete">
                <div class="form-group group-buttons">
                    <input type="hidden" asp-for="idCombustible" />
                    <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
            </form>
        </dd>
    </dl>
</div>
