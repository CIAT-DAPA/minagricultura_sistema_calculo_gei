@model IEnumerable<InventarioGEI.Models.Combustible>

@{
    ViewData["Title"] = "Index";
}

<div class="row container-title">
    <h3 class="col-3">Combustibles</h3>

    <a asp-action="Create" type="button" class="col-1 btn btn-primary button-create">Crear Combustibles</a>
</div>
<div class="card mb-3 container-main">
    <table class="table table-main">
        <thead>

            <tr class="tr-head">
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.actividad)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.nombreCombustible)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.tipo)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.unidad)
                </th>
                <th class="th-head"></th>
                <th class="th-head"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <div class="tr-hover">
                    <tr class="tr-body">
                        <td>
                        @Html.DisplayFor(modelItem => item.actividad.nombreTipoActividad)
                        </td>
                        <td class="td-body-main">
                            @Html.DisplayFor(modelItem => item.nombreCombustible)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tipo.tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.unidad.unidad)
                        </td>
    
                        <td>
                            <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.idCombustible">
                                Editar
                            </a>
                        </td>
                        <td>
                            <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idCombustible">
                                Eliminar
                            </a>
                        </td>
                   
                        
                    
                    </tr>
                    <tr>
                        <td colspan="100%">
                            <small class="text-muted">Creador por: @Html.DisplayFor(modelItem => item.usuario.email)</small>
                        </td>
                    </tr>
                </div>
            }
        </tbody>
    </table>
</div>
