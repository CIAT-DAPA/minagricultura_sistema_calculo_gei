@model IEnumerable<InventarioGEI.Models.Combustible>

@{
    ViewData["Title"] = "Index";
}

<div class="row container-title">
    <div class="col-3 d-flex align-items-center">
        <h3 class="m-0 me-3">Combustibles</h3>
        <a asp-controller="Home" asp-action="Manual" type="button"><span class="badge rounded-pill text-bg-secondary bg-secondary">info</span></a>
    </div>

    <a asp-action="Create" type="button" class="col-1 btn btn-primary button-create"><i class="fa-solid fa-plus"></i> Crear combustibles</a>
   
</div>
<div>
    <blockquote class="blockquote lead card">
        <p>Los combustibles son materiales que al momento de su combustión emiten gases de efecto invernadero</p>
    </blockquote>
</div>
<div class="card mb-3 container-main">
    <table class="table table-hover table-main">
        <thead>

            <tr class="tr-head">
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.actividad)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.nombreCombustible)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.tipo)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.unidad)
                </th>
                <th class="th-head"></th>
                <th class="th-head"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="tr-body">
                    <td class="border-bottom-0">
                        @Html.DisplayFor(modelItem => item.actividad.nombreTipoActividad)
                        <br>
                        <small class="text-muted">Creador por: @Html.DisplayFor(modelItem => item.usuario.email)</small>
                    </td>
                    <td class="td-body-main border-bottom-0">
                        @Html.DisplayFor(modelItem => item.nombreCombustible)
                    </td>
                    <td class="border-bottom-0">
                        @Html.DisplayFor(modelItem => item.tipo.tipo)
                    </td>
                    <td class="border-bottom-0">
                        @Html.DisplayFor(modelItem => item.unidad.unidad)
                    </td>

                    <td @*rowspan="2"*@>
                        <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.idCombustible">
                            <i class="fa-solid fa-pen"></i>  Editar
                        </a>
                    </td>
                    <td @*rowspan="2"*@>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idCombustible">
                            <i class="fa-solid fa-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>

              @*  <tr>
                    <td colspan="100" class="td-description">
                        <small class="text-muted">Creador por: @Html.DisplayFor(modelItem => item.usuario.email)</small>
                    </td>
                </tr>*@

            }
        </tbody>
    </table>
</div>
