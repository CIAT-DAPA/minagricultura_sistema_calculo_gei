@model InventarioGEI.Models.ConfiguracionActividad

@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-3 container-main">
    <div class="card-header">
        <h5 style="margin-top: 10px;">Eliminar configuración</h5>
        <hr />
    </div>
    <dl>
        
        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.subcategoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.subcategoria.nombreSubcategoria)
            </dd>
        </div>
        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.fuenteEmision)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fuenteEmision.nombreFuenteEmision)
            </dd>
        </div>
        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.combustible)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.combustible.nombreCombustible)
            </dd>
        </div>
        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.biocombustible)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.biocombustible)
            </dd>
        </div>
        @if (Model.biocombustible){
            <div>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.configuracion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.configuracion.subcategoria.nombreSubcategoria) - @Html.DisplayFor(model => model.configuracion.fuenteEmision.nombreFuenteEmision) - @Html.DisplayFor(model => model.configuracion.combustible.nombreCombustible)
                </dd>
            </div>
            <div>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.porcentaje)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.porcentaje)
                </dd>
            </div>
        }
        <dd>
            <form asp-action="Delete">
                <div class="form-group group-buttons">
                    <input type="hidden" asp-for="idConfiguracion" />
                    <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
            </form>
        </dd>
    </dl>
</div>
