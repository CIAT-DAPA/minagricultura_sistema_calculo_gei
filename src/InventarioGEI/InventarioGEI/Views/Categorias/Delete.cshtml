@model InventarioGEI.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-3 container-main">
    <div class="card-header">
        <h5 style="margin-top: 10px;">Eliminar categoría</h5>
        <hr />
    </div>
    <dl>
        <div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.alcance)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.alcance.nombreAlcance)
            </dd>
        </div>
        <div>
            <dt class = "col-sm-10">
                @Html.DisplayNameFor(model => model.nombreCategoria)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.nombreCategoria)
            </dd>
        </div>
        <div>
            <dt class = "col-sm-10">
                @Html.DisplayNameFor(model => model.usuarios)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.usuarios.email)
            </dd>
        </div>
        <dd>
            <form asp-action="Delete">
                <div class="form-group group-buttons">
                    <input type="hidden" asp-for="idCategoria" />
                    <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
            </form>
        </dd>
    </dl>
</div>
