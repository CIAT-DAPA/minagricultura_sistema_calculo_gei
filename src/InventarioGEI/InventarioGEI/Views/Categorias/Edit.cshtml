@model InventarioGEI.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<div class="card mb-3 container-main">
    <div class="card-header">
        <h3 style="margin-top: 10px;">Editar Categoría</h3>
        <hr />
    </div>
    <form asp-action="Edit" class="form-main">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="idCategoria" />
        <div class="form-group col-12 col-lg-5">
            <label asp-for="idAlcance" class="control-label"></label>
            <div class="selectdiv">
                <select asp-for="idAlcance" class="form-control input-select" asp-items="ViewBag.idAlcance"></select>
            </div>
            <span asp-validation-for="idAlcance" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-lg-5">
            <label asp-for="nombreCategoria" class="control-label col-form-label"></label>
            <input asp-for="nombreCategoria" placeholder="Ingrese el nombre de la categoría" class="form-control input-text" />
            <span asp-validation-for="nombreCategoria" class="text-danger"></span>
        </div>

        <div class="form-group group-buttons">
            <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>


