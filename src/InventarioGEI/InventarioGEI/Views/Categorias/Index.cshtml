@model IEnumerable<InventarioGEI.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombreCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuarios)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.alcance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.enabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuarios.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alcance.idAlcance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idCategoria">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idCategoria">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idCategoria">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
