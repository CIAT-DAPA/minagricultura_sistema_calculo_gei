@model IEnumerable<InventarioGEI.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<div class="row container-title">
    <h3 class="col-3">Categorias</h3>

    <a asp-action="Create" type="button" class="col-1 btn btn-primary button-create">Crear Categoria</a>
</div>
<div class="card mb-3 container-main">
    <table class="table table-hover table-main">
        <thead>
            <tr class="tr-head">
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.nombreCategoria)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.usuarios)
                </th>
                <th class="th-head">
                    @Html.DisplayNameFor(model => model.alcance)
                </th>
                <th class="th-head"></th>
                <th class="th-head"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr class="tr-body">
                <td class="td-body-main">
                    @Html.DisplayFor(modelItem => item.nombreCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.usuarios.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.alcance.nombreAlcance)
                </td>
                <td>
                    <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.idCategoria">
                        Editar
                    </a>
                </td>
                <td>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idCategoria">
                        Eliminar
                    </a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>