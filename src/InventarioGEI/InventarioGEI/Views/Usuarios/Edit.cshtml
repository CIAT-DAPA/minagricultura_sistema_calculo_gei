@model InventarioGEI.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="card mb-3" style="min-height: 100%; box-shadow: 0px 6px 18px 0px rgb(0 0 0 / 6%);">
    <div class="card-header" style="background-color: transparent; border: none;">
        <h3 style="margin-top: 10px;">Editar Usuario</h3>
        <hr />
    </div>
    <form asp-action="Edit" style="padding: 20px 40px; height: 58vh; display: flex; flex-direction: column; justify-content: space-around;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idUsuario" />
            <div class="form-group">
            <label asp-for="email" class="control-label col-form-label" style="color: #109CF1;"></label>
            <input asp-for="email" placeholder="Ingrese el correo del usuario" class="form-control" style="border: none; border-bottom: solid 1px black; border-radius: 0px; width: 400px; height:40px;font-weight: 600; padding: 0px;" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idRol" class="control-label" style="color: #109CF1;"></label>
                <div class="selectdiv ">

                    <select asp-for="idRol" class="form-select" asp-items="ViewBag.idRol" style="border-radius: 0px; width: 300px; border: none; border-bottom: solid 1px black; background-blend-mode: color;"></select>
                </div>
            </div>
            <div class="form-group">
            <div class="form-group" style="text-align-last: end; margin-top: 50px;">
                <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            </div>
        </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
