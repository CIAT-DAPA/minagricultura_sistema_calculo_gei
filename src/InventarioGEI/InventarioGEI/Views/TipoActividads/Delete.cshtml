@model InventarioGEI.Models.TipoActividad

@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-3 container-main">
    <div class="card-header">
        <h3 style="margin-top: 10px;">Eliminar Tipo de Actividad</h3>
        <hr />
    </div>
    <dl>
        <div>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.nombreTipoActividad)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.nombreTipoActividad)
            </dd>
        </div>
        <div>
            <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.usuario)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.usuario.email)
            </dd>
        </div>
        <dd>
            <form asp-action="Delete">
                <div class="form-group group-buttons">
                    <input type="hidden" asp-for="idTipoActividad" />
                    <a asp-action="Index" type="button" class="btn btn-outline-primary" style="margin-right: 30px;">Regresar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
            </form>
        </dd>
    </dl>
</div>
